{
  "manifest_version": 2,

  "name": "Bandcamp Controls",
  "description": "Control bandcamp from beyond",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "https://bandcamp.com/"
  ],
  "content_scripts": [
    {
      "matches": ["https://bandcamp.com/*"],
      "css": ["bc.css"],
      "js": ["bc.js"]
    }
  ]
}
